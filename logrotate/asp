# Keep three weeks worth of temperature logs
/data/temp.txt {
        daily
        rotate 21
        compress
        delaycompress
        copytruncate
        ifempty
}
/data/board-temp.txt {
        daily
        rotate 21
        compress
        delaycompress
        copytruncate
        ifempty
}

